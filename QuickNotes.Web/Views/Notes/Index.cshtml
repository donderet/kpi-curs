@model IEnumerable<QuickNotes.Web.Models.Note>
  @{
  ViewData["Title"] = "My Notes";
  }
  <h2>My Notes</h2>

  <p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
  </p>

  <table class="table">
    <thead>
      <tr>
        <th>Content</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var item in Model) {
      <tr>
        <td>
          @item.Content?.Split('\n').FirstOrDefault()
        </td>
      </tr>
      }
    </tbody>
  </table>
